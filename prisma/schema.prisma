generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgrestest:postgres@localhost:5432/postgrestest?schema=public"
}

model GeneralInquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  company   String?
  message   String
  consent   Boolean
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model BusinessPilotProgramInfo {
  id                     Int      @id @default(autoincrement())
  name                   String
  email                  String   @unique
  company                String
  consent                Boolean
  industry               String
  challenges             String[]
  roiTimeframe           Int
  operationSize          String
  currentSystems         String
  additionalNotes        String
  automationLevel        Int
  roboticSolutions       String[]
  specificChallenges     String
  implementationTimeline String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model CustomerPilotProgramInfo {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  zipCode String
  consent Boolean
}
