// components/NavBar.js
import { useState } from 'react';
import Link from 'next/link';

const NavBar = () => {
  const [openDropdown, setOpenDropdown] = useState(false);

  return (
    <nav className="bg-gray-900 text-white p-4">
      <div className="max-w-7xl mx-auto flex items-center justify-between">
        {/* Logo / Brand Name */}
        <div className="text-xl font-bold">
          <Link href="/"><a>Quantum Robotics Lab</a></Link>
        </div>

        {/* Menu Items */}
        <ul className="flex space-x-6">
          <li className="relative">
            {/* Subsidiaries dropdown */}
            <button 
              onClick={() => setOpenDropdown(!openDropdown)} 
              className="hover:text-qrl-teal"
            >
              Subsidiaries ▼
            </button>
            {openDropdown && (
              <ul className="absolute top-full left-0 mt-2 w-40 bg-gray-800 border border-gray-700">
                {["Kitchen", "Food (B2B)", "Cafe", "Pharma", "Logistics", "Travel"].map((subsidiary) => (
                  <li key={subsidiary}>
                    <a 
                      href="#" 
                      className="block px-4 py-2 hover:bg-gray-700"
                    >
                      {subsidiary}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
          <li><Link href="/about"><a className="hover:text-qrl-teal">About Us</a></Link></li>
          <li><Link href="/team"><a className="hover:text-qrl-teal">Team</a></Link></li>
          <li><Link href="/blog"><a className="hover:text-qrl-teal">Blog</a></Link></li>
          <li><Link href="/contact"><a className="hover:text-qrl-teal">Contact</a></Link></li>
        </ul>
      </div>
    </nav>
  );
};

export default NavBar;

