// pages/contact.js
import Head from 'next/head';
import { useState } from 'react';

export default function Contact() {
  const [status, setStatus] = useState(null); // to display success/error message

  const handleSubmit = async (e) => {
    e.preventDefault();
    setStatus(null);
    const form = e.target;
    const data = {
      name: form.name.value,
      email: form.email.value,
      category: form.category.value,
      message: form.message.value
    };
    try {
      const res = await fetch('/api/contact', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify(data)
      });
      if (res.ok) {
        setStatus('success');
        form.reset();
      } else {
        setStatus('error');
      }
    } catch (err) {
      console.error(err);
      setStatus('error');
    }
  };

  return (
    <>
      <Head>
        <title>Contact Us – Quantum Robotics Lab</title>
        <meta name="description" content="Contact Quantum Robotics Lab for any inquiries about our products, services, or partnerships." />
      </Head>
      <section className="py-16 px-6 bg-white">
        <div className="max-w-xl mx-auto">
          <h1 className="text-4xl font-bold mb-8 text-center">Contact Us</h1>
          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <label className="block text-sm font-medium mb-1" htmlFor="name">Name</label>
              <input required id="name" name="name" type="text" className="w-full border border-gray-300 rounded px-3 py-2" />
            </div>
            <div>
              <label className="block text-sm font-medium mb-1" htmlFor="email">Email</label>
              <input required id="email" name="email" type="email" className="w-full border border-gray-300 rounded px-3 py-2" />
            </div>
            <div>
              <label className="block text-sm font-medium mb-1" htmlFor="category">Inquiry Category</label>
              <select id="category" name="category" className="w-full border border-gray-300 rounded px-3 py-2">
                <option>General</option>
                <option>Support</option>
                <option>Partnership</option>
                <option>Media</option>
              </select>
            </div>
            <div>
              <label className="block text-sm font-medium mb-1" htmlFor="message">Message</label>
              <textarea required id="message" name="message" rows="5" className="w-full border border-gray-300 rounded px-3 py-2"></textarea>
            </div>
            <button type="submit" className="bg-qrl-teal text-white font-medium py-2 px-4 rounded hover:bg-teal-700">
              Send Message
            </button>
          </form>
          {status === 'success' && <p className="text-green-600 mt-4">Thank you! Your message has been sent.</p>}
          {status === 'error' && <p className="text-red-600 mt-4">Sorry, something went wrong. Please try again.</p>}
        </div>
      </section>
    </>
  );
}

// pages/blog.js
import Head from 'next/head';

// We will use getServerSideProps to fetch blog posts at request time (could also use getStaticProps for SSG)
export async function getServerSideProps() {
  const res = await fetch(`http://localhost:3000/api/blog`);  // in production, this would be your domain
  const posts = await res.json();
  return { props: { posts } };
}

export default function Blog({ posts }) {
  return (
    <>
      <Head>
        <title>Blog – Quantum Robotics Lab</title>
        <meta name="description" content="Read the latest articles and updates from Quantum Robotics Lab, covering robotics innovations in various industries." />
      </Head>
      <section className="py-16 px-6 bg-gray-50">
        <div className="max-w-4xl mx-auto">
          <h1 className="text-4xl font-bold mb-8 text-center">Blog</h1>
          <div className="space-y-8">
            {posts && posts.map(post => (
              <article key={post.id} className="bg-white p-6 rounded shadow">
                <h2 className="text-2xl font-semibold mb-2">{post.title}</h2>
                <p className="text-gray-700 mb-4">{post.excerpt}</p>
                <p className="text-sm text-gray-500">Published on {post.date}</p>
              </article>
            ))}
            {!posts.length && (
              <p className="text-center text-gray-600">No articles available at the moment. Please check back later.</p>
            )}
          </div>
        </div>
      </section>
    </>
  );
}

// pages/api/contact.js
export default function handler(req, res) {
  if (req.method === 'POST') {
    const { name, email, category, message } = req.body;
    // In a real app, you might send an email or save this to a database.
    console.log('New contact message:', { name, email, category, message });
    // Respond with a success message
    res.status(200).json({ status: 'OK' });
  } else {
    // Handle any non-POST request (e.g., GET)
    res.setHeader('Allow', ['POST']);
    res.status(405).json({ message: 'Method Not Allowed' });
  }
}

// pages/api/blog.js
export default function handler(req, res) {
  // We’ll just return an array of blog post objects.
  const samplePosts = [
    {
