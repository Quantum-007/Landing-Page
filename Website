function MyApp({ Component, pageProps }) {
  return (
    <>
      {/* Global meta tags can go here */}
      <Head>
        <meta charSet="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {/* Primary SEO tags */}
        <title>Quantum Robotics Lab – Futuristic Robotics Solutions</title>
        <meta name="description" content="Quantum Robotics Lab is a futuristic robotics parent company innovating across industries.">
        {/* OpenGraph tags for social sharing */}
        <meta property="og:title" content="Quantum Robotics Lab" />
        <meta property="og:description" content="Innovating robotics in Kitchen, Food, Pharma, Logistics, Travel, and more." />
        <meta property="og:image" content="/images/hero-bg.jpg" />
        <meta property="og:url" content="https://your-domain.com" />
        <meta name="twitter:card" content="summary_large_image" />
        {/* You can add structured data script here if needed */}
      </Head>
      <NavBar />
      <main className="min-h-screen bg-gray-50">
